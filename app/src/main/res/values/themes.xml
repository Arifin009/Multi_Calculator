<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MultiCalculator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/button_bg</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <!-- Set default button style to ensure background is applied -->
        <item name="colorControlNormal">@android:color/black</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>

        <style name="TEXT">
            <item name="android:textColor">@color/black</item>
        </style>
    <style name="TEXT_REVERSE">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="nav_bar_style">
        <item name="android:background">@drawable/side_nav_bar</item>
    </style>
    <style name="Theme.MultiCalculator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="switch_color" >
        <item name="android:thumbTint">#333333</item>
    </style>
    <style name="Theme.MultiCalculator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MultiCalculator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ToolbarBlackIcons" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>
</resources>
