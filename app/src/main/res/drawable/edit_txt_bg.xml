<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when EditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#B4EDF0F2" /> <!-- Background color when focused -->
            <stroke android:width="2dp" android:color="@color/teal_200" /> <!-- Border color when focused -->
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#B4EDF0F2" /> <!-- Background color in default state -->
            <corners android:radius="10dp" />
        </shape>
    </item>

</selector>
